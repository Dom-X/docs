{
    "title": "Kurenai Network",
    "author": "Kurenai Network",
    "description": "welcome to Kurenai Network",
    "language": "zh-hans",
    "gitbook": "3.2.3",
    "styles": {
        "website": "./style/website.css"
    },
    "structure": {
        "readme": "README.md"
    },
    "links": {
        "sidebar": {
            "回到官网": "https://www.Kurenai.io"
        }
    },
    "plugins": [
        "anchors",
        "anchor-navigation-ex",
        "auto-scroll-table",
        "advanced-emoji",
        "code",
        "chapter-fold",
        "expandable-chapters-small",
        "favicon",
        "fontsettings",
        "github",
        "github-buttons",
        "klipse",
        "-livereload",
        "-lunr",
        "pageview-count",
        "page-toc-button",
        "popup",
        "sharing-plus",
        "-sharing",
        "splitter",
        "-search",
        "search-pro",
        "toggle-chapters",
        "tbfed-pagefooter",
        "todo",
        "hide-element"
    ],
    "pluginsConfig": {
        "github": {
            "url": "https://github.com/Kurenai-Network"
        },
        "hide-element": {
            "elements": [".gitbook-link"]
        },
        "theme-default": {
            "showLevel": true
        },
        "code": {
            "copyButtons": true
        },
        "tbfed-pagefooter": {
            "copyright": "© 2021 Kurenai Network, lnc.",
            "modify_label": "本教程发布时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "github-buttons": {
            "buttons": [{
                "user": "Kurenai-Network",
                "repo": "docs",
                "type": "star",
                "size": "small",
                "count": true
                }
            ]
        },
        "page-toc-button": {
            "maxTocDepth": 2,
            "minTocSize": 2
        },
        "sharing": {
            "douban": false,
            "facebook": true,
            "google": true,
            "hatenaBookmark": false,
            "instapaper": false,
            "line": false,
            "linkedin": false,
            "messenger": false,
            "pocket": false,
            "qq": false,
            "qzone": false,
            "stumbleupon": false,
            "twitter": true,
            "viber": false,
            "vk": false,
            "weibo": false,
            "whatsapp": false,
            "all": [
                 "facebook","google","twitter","whatsapp"
            ]
        },
        "anchor-navigation-ex": {
            "showLevel": true
        },
        "favicon":{
            "shortcut": "",
            "bookmark": ""
        }
    }
}
